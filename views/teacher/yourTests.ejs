<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/cart.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
        <main>
            <% if (tests.length > 0) { %>
                <ul class="cart__item-list">
                    <% tests.forEach(t => { %>
                        <li class="cart__item">
                            <h1><%= t.test_name %></h1>
                            <h2>test-id: <%= t.test_id %></h2>
                            <a class="btn" href="/teacher/review/<%= t.test_id %>">Review</a>
                        </li>
                    <% }) %>
                </ul>
            <% } else { %>
                <h1>No Test Paper Created!</h1>
            <% } %>
                <hr>
                <div class="centered">
                    <a class="btn" href="/teacher/createTest">Create New Test</a>
                </div>
                
        </main>
        <%- include('../includes/end.ejs') %>