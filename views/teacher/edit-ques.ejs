<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <form class="product-form" action="/teacher/<% if (editing) { %>edit-ques<% } else { %>add-ques<% } %>" method="POST">
            <div class="form-control">
                <label for="quesDesc">Enetr Question</label>
                <textarea name="quesDesc" id="quesDesc" rows="4"><% if (editing) { %><%= ques.quesDesc %><% } %></textarea>
            </div>
            <div class="form-control">
                <label for="optionA">Option A</label>
                <textarea name="optionA" id="optionA" rows="2"><% if (editing) { %><%= ques.optionA %><% } %></textarea>
            </div>
            <div class="form-control">
                <label for="optionB">Option B</label>
                <textarea name="optionB" id="optionB" rows="2"><% if (editing) { %><%= ques.optionB %><% } %></textarea>
            </div>
            <% if (editing) { %>
                <input type="hidden" value="<%= ques._id %>" name="quesId">
            <% } %>
            <% if (!editing) { %>
                <input type="hidden" name="test_id" value="<%= test_id %>" >
            <% } %>
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <button class="btn" type="submit"><% if (editing) { %>Update Ques<% } else { %>Add Ques<% } %></button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>